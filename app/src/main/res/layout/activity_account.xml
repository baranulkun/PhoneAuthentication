<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGr"
    tools:context=".AccountActivity">

  <TextView
      android:id="@+id/textView"
      android:layout_width="70dp"
      android:layout_height="40dp"
      android:layout_gravity="center"
      android:layout_marginStart="84dp"
      android:layout_marginEnd="10dp"
      android:background="@color/blue"
      android:gravity="center"
      android:text="+90"
      android:textSize="20dp"
      app:layout_constraintBottom_toBottomOf="@+id/numText"
      app:layout_constraintEnd_toStartOf="@+id/numText"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/numText"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/numButton"
      android:layout_width="260dp"
      android:layout_height="40dp"
      android:layout_marginBottom="24dp"
      android:background="@color/blue"
      android:text="Kod GÃ¶nder"
      app:layout_constraintBottom_toTopOf="@+id/verText"
      app:layout_constraintEnd_toEndOf="@+id/numText"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/textView" />

  <EditText
      android:id="@+id/numText"
      android:layout_width="180dp"
      android:layout_height="40dp"
      android:layout_marginEnd="73dp"
      android:background="@color/blue"
      android:textColor="#000000"
      android:ems="10"
      android:hint=" (5**)-***-****"
      android:inputType="number"
      android:paddingStart="1dp"
      android:textSize="20dp"
      app:layout_constraintBottom_toTopOf="@+id/numButton"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView2"
      app:layout_constraintVertical_bias="0.86" />

  <Button
      android:id="@+id/verCont"
      android:layout_width="260dp"
      android:layout_height="40dp"
      android:layout_marginBottom="160dp"
      android:background="@color/blue"
      android:text="Kod Onayla"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/verText"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/verText" />

  <EditText
      android:id="@+id/verText"
      android:layout_width="260dp"
      android:layout_height="40dp"
      android:layout_marginBottom="24dp"
      android:background="@color/blue"
      android:ems="10"
      android:gravity="center"
      android:textColor="#000000"
      android:hint="555-555"
      android:inputType="number"
      android:paddingStart="7dp"
      android:textSize="20dp"
      app:layout_constraintBottom_toTopOf="@+id/verCont"
      app:layout_constraintEnd_toEndOf="@+id/numButton"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/numButton" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="291dp"
      android:layout_height="276dp"
      android:layout_marginTop="84dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/logoo" />

</androidx.constraintlayout.widget.ConstraintLayout>